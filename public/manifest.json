{
    "manifest_version": 2,

    "name": "SecretIcone",
    "description": "kintoneのプロフィール画像を自分のお気に入り画像にこっそりすり替えるChrome拡張",
    "version": "1.0",

    "content_scripts": [
        {
            "matches": ["https://bozuman.cybozu.com/k/*", "https://bozuman.s.cybozu.com/k/*"],
            "js": ["js/ContentScript.js"]
        }
    ],

    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },

    "permissions": ["https://bozuman.cybozu.com/k/*", "https://bozuman.s.cybozu.com/k/*", "storage"]
}
