{
    "manifest_version": 2,

    "name": "kintone-disguise-my-profile",
    "description": "kintoneのプロフィール画像を自分のお気に入り画像にこっそりすり替えるChrome拡張",
    "version": "1.0",

    "content_scripts": [
        {
            "matches": ["https://bozuman.cybozu.com/k/*", "https://bozuman.s.cybozu.com/k/*"],
            "js": ["js/contentscript.js"],
            "all_frames": true
        }
    ],

    "background": {
        "scripts": ["js/background.js"]
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "permissions": ["https://bozuman.cybozu.com/*", "https://bozuman.s.cybozu.com/*", "storage"]
}
